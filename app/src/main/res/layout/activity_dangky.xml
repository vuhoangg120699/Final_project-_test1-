<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#6F80DA"

                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="100dp"
            android:layout_width="120dp" android:layout_height="120dp"
            android:src="@drawable/logo"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/background_light"
            android:layout_centerHorizontal="true"
            android:id="@+id/hinhanh"
    />
    <ImageView android:layout_width="32dp"
               android:layout_marginTop="7dp"
               android:layout_marginLeft="7dp"
               android:layout_height="32dp"
               android:id="@+id/back"
    android:src="@drawable/back"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:textSize="28sp"
              android:textStyle="bold"
              android:shadowDx="-1"
              android:shadowDy="-1"
              android:shadowRadius="1"
              android:textColor="@android:color/background_light"
              android:shadowColor="@android:color/background_light"
              android:layout_marginTop="15dp"
              android:text="Chăm Sóc Sức Khỏe"
              android:layout_below="@+id/hinhanh"/>


    <EditText
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/hinhanh"
            android:paddingLeft="15dp"
            android:background="@drawable/background_edittext"
            android:textColorHint="@android:color/background_light"
            android:textSize="16sp"
            android:hint="Số Điện Thoại"
            android:maxLength="14"
            android:inputType="number"
            android:shadowColor="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:id="@+id/editsdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <EditText
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_below="@+id/editsdt"
            android:background="@drawable/background_edittext"
            android:maxLength="16"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:shadowColor="@android:color/background_dark"
            android:textColor="@android:color/background_light"
            android:id="@+id/editpass"
            android:hint="Mật Khẩu"
            android:textColorHint="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <EditText
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_below="@+id/editpass"
            android:background="@drawable/background_edittext"
            android:maxLength="16"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:shadowColor="@android:color/background_dark"
            android:textColor="@android:color/background_light"
            android:id="@+id/editpass1"
            android:hint="Mật Khẩu"
            android:textColorHint="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <Button
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editpass1"
            android:elevation="0dp"
            android:background="@drawable/button_login"
            android:id="@+id/btndangnhap"
            android:shadowRadius="1"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowColor="#6F80DA"
            android:textColor="#6F80DA"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="Đăng Ký"

            android:layout_centerHorizontal="true"
            android:layout_width="170dp"
            android:layout_height="50dp"/>



</RelativeLayout>