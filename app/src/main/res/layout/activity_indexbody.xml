<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:background="#EDEDE5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <ImageView android:layout_width="42dp" android:layout_height="42dp"
 android:src="@drawable/back"
            android:id="@+id/back"
 android:layout_marginTop="7dp"
 android:layout_marginLeft="10dp"
 android:layout_marginBottom="30dp"/>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginRight="35dp"
          android:padding="8dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView

               android:padding="8dp"
               android:textSize="18sp"
               android:shadowColor="@color/black"
               android:textColor="@color/black"
               android:text="Chiều Cao"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView

               android:maxLength="3"
               android:inputType="number"
               android:layout_marginLeft="10dp"
               android:shadowDy="-1"
               android:shadowDx="-1"
               android:shadowRadius="1"
               android:textStyle="bold"
               android:gravity="center"

               android:background="@drawable/background_edittext"
               android:id="@+id/editchieucao"
               android:padding="8dp"
               android:textSize="18sp"
               android:shadowColor="@color/black"
               android:textColor="@color/black"

               android:layout_width="match_parent"
               android:layout_height="40dp"/>
       </LinearLayout>
   </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginRight="35dp"
          android:padding="8dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView

               android:padding="8dp"
               android:textSize="18sp"
               android:shadowColor="@color/black"
               android:textColor="@color/black"
               android:text="Cân Nặng"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <EditText
               android:maxLength="3"
               android:inputType="number"
               android:layout_marginLeft="10dp"
               android:shadowDy="-1"
               android:shadowDx="-1"
               android:shadowRadius="1"
               android:textStyle="bold"
               android:gravity="center"
               android:background="@drawable/background_edittext"
               android:id="@+id/editcannang"
               android:padding="8dp"
               android:textColorHint="@color/black"
               android:textSize="18sp"
               android:shadowColor="@color/black"
               android:textColor="@color/black"

               android:layout_width="match_parent"
               android:layout_height="40dp"/>
       </LinearLayout>
   </androidx.cardview.widget.CardView>
    <TextView

        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Kết Quả"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="35dp"
        android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:padding="8dp"
                android:textSize="18sp"
                android:shadowColor="@color/black"
                android:textColor="@color/black"
                android:text="Chỉ số"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:maxLength="4"
                android:layout_marginLeft="40dp"
                android:shadowDy="-1"
                android:shadowDx="-1"
                android:shadowRadius="1"
                android:textStyle="bold"
                android:gravity="center"

                android:background="@drawable/background_edittext"
                android:id="@+id/txtchiso"
                android:padding="8dp"
                android:textSize="18sp"
                android:shadowColor="@color/black"
                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="35dp"
             android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:padding="8dp"
                android:textSize="18sp"
                android:shadowColor="@color/black"
                android:textColor="@color/black"
                android:text="Nhóm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView


                android:inputType="number"
                android:layout_marginLeft="40dp"
                android:shadowDy="-1"
                android:shadowDx="-1"
                android:shadowRadius="1"
                android:textStyle="bold"
                android:gravity="center"

                android:background="@drawable/background_edittext"
                android:id="@+id/txtnhom"
                android:padding="8dp"
                android:textSize="18sp"
                android:shadowColor="@color/black"
                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_marginRight="35dp"
        android:padding="8dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView

              android:padding="8dp"
              android:textSize="18sp"
              android:shadowColor="@color/black"
              android:textColor="@color/black"
              android:text="Kết Quả"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <EditText

              android:inputType="number"
              android:layout_marginLeft="25dp"
              android:shadowDy="-1"
              android:shadowDx="-1"
              android:shadowRadius="1"
              android:textStyle="bold"
              android:gravity="center"
              android:background="@drawable/background_edittext"
              android:id="@+id/txtketqua"
              android:padding="8dp"
              android:textSize="18sp"
              android:shadowColor="@color/black"
              android:textColor="@color/black"

              android:layout_width="match_parent"
              android:layout_height="40dp"/>
      </LinearLayout>
  </androidx.cardview.widget.CardView>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="16sp"
            android:textStyle="bold"
            android:shadowColor="#3F51B5"
            android:shadowRadius="1"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:textColor="#3F51B5"
            android:id="@+id/btntinh"
            android:text="Tính"
            android:textAllCaps="false"
            android:background="@drawable/button_login"
            android:layout_width="120dp"
            android:layout_height="40dp"/>
        <Button
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:shadowColor="#3F51B5"
            android:shadowRadius="1"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:textColor="#3F51B5"
            android:id="@+id/btnluu"
            android:text="Lưu"
            android:background="@drawable/button_login"
            android:layout_width="120dp"
            android:layout_height="40dp"/>

    </LinearLayout>
</LinearLayout>