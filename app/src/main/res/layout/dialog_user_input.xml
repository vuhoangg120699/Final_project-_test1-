<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="350dp"
                                   app:cardCornerRadius="10dp"
                                   app:cardElevation="8dp"
                                   app:cardBackgroundColor="#3F51B5"
                                   android:layout_height="wrap_content">
         <LinearLayout android:layout_width="350dp"
                       android:orientation="vertical"
                       android:layout_height="wrap_content">
              <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Nhập Thông Tin"
              android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/background_light"
                        android:shadowColor="@android:color/background_light"
                        android:textStyle="bold"
              android:padding="8dp"
              />
              <EditText android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:hint="Nhập tên"
                        android:gravity="center"
                        android:id="@+id/editten"
                        android:textColor="@android:color/background_light"
                        android:shadowColor="@android:color/background_light"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColorHint="@android:color/background_light"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="45dp"
              android:background="@drawable/background_edittext"/>
             <EditText android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:hint="Nhập Chiều Cao (cm)"
                       android:gravity="center"
                       android:inputType="number"
                       android:id="@+id/editchieucao"
                       android:textColor="@android:color/background_light"
                       android:shadowColor="@android:color/background_light"
                       android:textSize="17sp"
                       android:textStyle="bold"
                       android:textColorHint="@android:color/background_light"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="15dp"
                       android:layout_height="45dp"
                       android:background="@drawable/background_edittext"/>
             <EditText android:layout_width="match_parent"
                       android:layout_marginLeft="15dp"
                       android:hint="Nhập cân nặng (kg)"
                       android:gravity="center"
                       android:inputType="number"
                       android:id="@+id/editcannang"
                       android:textColor="@android:color/background_light"
                       android:shadowColor="@android:color/background_light"
                       android:textSize="17sp"
                       android:textStyle="bold"
                       android:textColorHint="@android:color/background_light"
                       android:layout_marginTop="10dp"
                       android:layout_marginRight="15dp"
                       android:layout_height="45dp"
                       android:background="@drawable/background_edittext"/>
             <Button android:layout_width="120dp" android:layout_height="45dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="25dp"
                     android:text="Xác Nhận"
                     android:textSize="16sp"
                     android:textAllCaps="false"
                     android:layout_marginBottom="15dp"
                     android:id="@+id/btnxacnhan"
                     android:textColor="#3F51B5"
             android:background="@drawable/button_login"/>
         </LinearLayout>


</androidx.cardview.widget.CardView>