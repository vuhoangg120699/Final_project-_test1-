<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
                android:background="#7584D3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView android:layout_width="match_parent" android:layout_height="match_parent"
    android:scaleType="centerCrop"
    app:lottie_autoPlay="true"
    app:lottie_rawRes="@raw/background"
    app:lottie_loop="true"
    app:lottie_speed="1"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="110dp"/>

        <Button android:layout_width="120dp"
                android:layout_below="@+id/logo"
                android:text="Menu"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark"
                android:id="@+id/btnmenu"
                android:textSize="18sp"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_login"
                android:layout_height="45dp"/>
    <Button android:layout_width="120dp"
            android:layout_below="@+id/btnmenu"
            android:text="Tiện Ích"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/btntienich"
            android:textSize="18sp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_login"
            android:layout_height="45dp"/>


</RelativeLayout>