<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    app:cardBackgroundColor="#6A3DBA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textColor="@android:color/background_light"
            android:shadowColor="@android:color/background_light"
            android:text="Chọn Mức  Nước"/>

        <ImageView android:layout_width="90dp" android:layout_height="90dp"
            android:src="@drawable/rain"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:np_width="140dp"
            app:np_height="250dp"
            app:np_dividerColor="@android:color/transparent"


            app:np_selectedTextColor="@android:color/background_light"
            app:np_selectedTextSize="20sp"
            app:np_textColor="#E0D7EF"
            app:np_textSize="16sp"

            app:np_value="3" />
        <Button
            android:textAllCaps="false"
            android:textSize="18sp"
            android:shadowColor="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:text="Tạo Nước"
            android:id="@+id/btnadd"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button"
            android:layout_width="140dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>