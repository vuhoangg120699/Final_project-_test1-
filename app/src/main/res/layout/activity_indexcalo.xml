<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#EDEDE5"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <androidx.appcompat.widget.Toolbar
     android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
     android:id="@+id/toolbar"
     android:background="@color/cardview_shadow_end_color"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
       android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"
                    android:text="Giới Tính"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@android:color/background_light"
                    android:hint="sex"
                    android:drawablePadding="15dp"
                  android:layout_gravity="center"
                    android:maxLength="3"

                    android:gravity="end"

                    android:id="@+id/txtgioitinh"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"
                      android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                 <ImageView
                     android:layout_gravity="center"
                     android:src="@drawable/next"
                     android:layout_width="12dp"
                     android:layout_height="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"
                    android:text="Tuổi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:background="@android:color/transparent"
                    android:drawablePadding="15dp"

                    android:maxLength="3"
                    android:inputType="number"
                    android:layout_marginLeft="58dp"
                    android:gravity="end"
                    android:hint="year"

                    android:id="@+id/edittuoi"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"
                   android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/next"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"
                    android:text="Chiều Cao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@android:color/transparent"
                    android:drawablePadding="10dp"

                    android:maxLength="3"
                    android:inputType="number"
                    android:layout_marginLeft="11dp"
                    android:gravity="end"
                    android:hint="cm"

                    android:id="@+id/editchieucao"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout

                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"
                    android:text="Cân Nặng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@android:color/transparent"
                    android:drawablePadding="15dp"

                    android:maxLength="3"
                    android:inputType="number"
                    android:layout_marginLeft="11dp"
                    android:gravity="end"
                    android:hint="kg"
                    android:id="@+id/editcannang"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:shadowColor="@android:color/background_dark"
                    android:textColor="@android:color/background_dark"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:padding="8dp"
                android:textSize="18sp"
                android:shadowColor="@android:color/background_dark"
                android:textColor="@android:color/background_dark"
                android:text="Mức độ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:drawablePadding="15dp"

                android:maxLength="4"
                android:layout_marginLeft="30dp"
                android:gravity="end"
                android:hint="Hoạt động"

                android:id="@+id/txtmuchoatdong"
                android:padding="8dp"
                android:textSize="18sp"
                android:shadowColor="@android:color/background_dark"
                android:textColor="@android:color/background_dark"
                  android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:padding="8dp"
            android:textSize="18sp"
            android:shadowColor="@android:color/background_dark"
            android:textColor="@android:color/background_dark"
            android:text="Kết Quả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:inputType="number"
            android:layout_marginLeft="25dp"
            android:shadowDy="-1"
            android:shadowDx="-1"
            android:shadowRadius="1"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/custom_background_edittext"
            android:id="@+id/txtketqua"
            android:padding="8dp"
            android:textSize="14sp"
            android:shadowColor="@android:color/background_dark"
            android:textColor="@android:color/background_dark"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="16sp"
            android:textStyle="bold"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="1"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/btntinh"
            android:text="Tính"
            android:background="@drawable/button_login"
            android:layout_width="120dp"
            android:layout_height="45dp"/>
        <Button
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="1"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/btnluu"
            android:text="Lưu"
            android:background="@drawable/button_login"
            android:layout_width="120dp"
            android:layout_height="45dp"/>

    </LinearLayout>
</LinearLayout>