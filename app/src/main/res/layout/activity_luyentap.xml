<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:background="#C9CCDC"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <ImageView android:layout_width="42dp" android:layout_height="42dp"
                   android:src="@drawable/back"
                   android:id="@+id/back"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="25dp"/>

        <com.airbnb.lottie.LottieAnimationView android:layout_width="320dp" android:layout_height="320dp"
                                               android:layout_gravity="center"
                                               app:lottie_rawRes="@raw/practive"
                                               app:lottie_autoPlay="true"
                                               app:lottie_loop="true"
                                               android:layout_marginTop="10dp"
                                               app:lottie_speed="1"
        />

        <androidx.appcompat.widget.AppCompatSpinner android:layout_width="180dp" android:layout_height="45dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginLeft="30dp"
                                                    android:id="@+id/spinermuc"/>

               <com.airbnb.lottie.LottieAnimationView android:layout_width="130dp" android:layout_height="130dp"
               android:layout_gravity="center"
               app:lottie_rawRes="@raw/clocks"
               app:lottie_autoPlay="true"
               app:lottie_speed="1"
                                                      android:id="@+id/l1"
                                                      android:layout_marginTop="30dp"
                                                      android:layout_marginBottom="15dp"
               app:lottie_loop="true"/>
        <Button android:layout_width="130dp"
                android:layout_marginTop="15dp"
                android:id="@+id/btntime"
                android:text="00:00"
                android:textSize="18sp"
                android:textStyle="bold"

                android:textColor="@android:color/holo_blue_dark"
                android:layout_height="50dp"
                android:background="@drawable/button_login"
        android:layout_gravity="center"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"


                      android:layout_marginTop="35dp"
                      android:layout_marginBottom="25dp"
                      android:layout_height="wrap_content">
            <Button android:layout_width="130dp"

                    android:id="@+id/btnbatdau"
                    android:text="Bắt Đầu"
                    android:layout_marginLeft="30dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"

                    android:textColor="@android:color/holo_red_dark"
                    android:layout_height="50dp"
                    android:background="@drawable/button_login"
                    android:layout_gravity="center"/>
            <Button android:layout_width="130dp"

                    android:id="@+id/btnstop"
                    android:text="Kết Thúc"

                    android:layout_marginLeft="80dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"


                    android:textColor="@android:color/holo_red_dark"
                    android:layout_height="50dp"
                    android:background="@drawable/button_login"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>