<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:background="#6F80DA"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/hinhanh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo"
        app:civ_border_color="@android:color/background_light"
        app:civ_border_width="2dp" />

     <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
               android:textSize="28sp"
               android:textStyle="bold"
               android:shadowDx="-1"
               android:shadowDy="-1"
               android:shadowRadius="1"
               android:textColor="@android:color/background_light"
               android:shadowColor="@android:color/background_light"
               android:layout_marginTop="15dp"
               android:text="Chăm Sóc Sức Khỏe"
     android:layout_below="@+id/hinhanh"/>

    <TextView
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_marginRight="10dp"

            android:layout_centerHorizontal="true"
            android:id="@+id/txtdangky"
            android:gravity="center"
            android:text="@string/dangky"
            android:textSize="16sp"
            android:shadowColor="#FDFDFD"
            android:shadowDy="-1"
            android:shadowDx="-1"
            android:shadowRadius="1"
            android:textColor="#FCFCFD"
            android:layout_marginTop="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/hinhanh"
            android:paddingLeft="15dp"
            android:background="@drawable/background_edittext"
            android:textColorHint="@android:color/background_light"
            android:textSize="16sp"
            android:hint="Số Điện Thoại"
            android:maxLength="14"
            android:inputType="number"
            android:shadowColor="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:id="@+id/editsdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <EditText
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_below="@+id/editsdt"
            android:background="@drawable/background_edittext"
            android:maxLength="16"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:shadowColor="@android:color/background_dark"
            android:textColor="@android:color/background_light"
            android:id="@+id/editpass"
            android:hint="Mật Khẩu"
            android:textColorHint="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
        android:id="@+id/btndangnhap"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:elevation="0dp"
        android:shadowColor="#6F80DA"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="Đăng Nhập"

        android:textAllCaps="false"
        android:textColor="#6F80DA"
        android:textSize="16sp" />



</RelativeLayout>