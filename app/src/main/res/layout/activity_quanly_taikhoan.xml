<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#B0B0D6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:layout_width="42dp" android:layout_height="42dp"
    android:src="@drawable/back"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="10dp"

    android:id="@+id/back"/>
      <de.hdodenhof.circleimageview.CircleImageView
              android:layout_width="90dp"
              android:layout_height="90dp"
      android:id="@+id/profile"
        android:layout_centerHorizontal="true"
          android:layout_marginTop="30dp"

        android:src="@drawable/users"
      app:civ_border_color="@android:color/holo_red_dark"/>
    <androidx.cardview.widget.CardView
            android:layout_below="@+id/profile"
     android:id="@+id/c1"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Số Điện Thoại"
                          android:textSize="16sp"
                          android:paddingTop="8dp"
                          android:paddingLeft="8dp"
                          android:textColor="@android:color/holo_blue_dark"/>
                <TextView
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:text="0966606503"
                        android:layout_marginRight="25dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:maxLength="16"
                        android:textSize="16sp"

                        android:shadowColor="@android:color/background_dark"
                        android:textColor="@android:color/background_dark"
                        android:id="@+id/txtsdt"
                        android:background="@android:color/background_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
           <LinearLayout android:layout_width="match_parent"
                         android:layout_marginTop="15dp"
                         android:orientation="horizontal"
                         android:layout_height="wrap_content">
               <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="Họ Tên"
               android:textSize="16sp"
                         android:paddingTop="8dp"
                         android:paddingLeft="8dp"
               android:textColor="@android:color/holo_blue_dark"/>
               <EditText
                       android:drawablePadding="10dp"
                       android:layout_gravity="center"
                       android:text="thaikaio"
                       android:gravity="end"
                       android:layout_weight="1"
                       android:paddingTop="7dp"
                       android:paddingBottom="7dp"
                       android:maxLength="16"
                       android:textSize="16sp"

                       android:shadowColor="@android:color/background_dark"
                       android:textColor="@android:color/background_dark"
                       android:id="@+id/editname"
                       android:background="@android:color/background_light"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               <ImageView android:layout_width="12dp"
                          android:layout_gravity="center"
                          android:layout_height="12dp"
                          android:layout_marginRight="8dp"
                          android:layout_marginLeft="10dp"
               android:src="@drawable/next"/>

           </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="15dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Chiều Cao"
                          android:textSize="16sp"
                          android:paddingTop="8dp"
                          android:paddingLeft="8dp"
                          android:textColor="@android:color/holo_blue_dark"/>
                <EditText
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"

                        android:layout_marginRight="5dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:maxLength="16"
                        android:textSize="16sp"
                         android:inputType="number"
                        android:shadowColor="@android:color/background_dark"
                        android:textColor="@android:color/background_dark"
                        android:id="@+id/editchieucao"
                        android:background="@android:color/background_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView android:layout_width="12dp"
                           android:layout_gravity="center"
                           android:layout_height="12dp"
                           android:layout_marginRight="8dp"
                           android:layout_marginLeft="10dp"
                           android:src="@drawable/next"/>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Cân Nặng"
                          android:textSize="16sp"
                          android:paddingTop="8dp"
                          android:paddingLeft="8dp"
                          android:textColor="@android:color/holo_blue_dark"/>
                <EditText
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"

                        android:layout_marginRight="5dp"
                        android:gravity="end"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:maxLength="16"
                        android:textSize="16sp"

                        android:shadowColor="@android:color/background_dark"
                        android:textColor="@android:color/background_dark"
                        android:id="@+id/editcannang"
                        android:background="@android:color/background_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView android:layout_width="12dp"
                           android:layout_gravity="center"
                           android:layout_height="12dp"
                           android:layout_marginRight="8dp"
                           android:layout_marginLeft="10dp"
                           android:src="@drawable/next"/>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Mật Khẩu"
                          android:textSize="16sp"
                          android:paddingTop="8dp"
                          android:paddingLeft="8dp"
                          android:textColor="@android:color/holo_blue_dark"/>
                <TextView
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/txtmatkhau"
                        android:layout_marginRight="5dp"
                        android:gravity="end"

                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:maxLength="16"
                        android:textSize="16sp"
                        android:inputType="textPassword"
                        android:text="123456"
                        android:shadowColor="@android:color/background_dark"
                        android:textColor="@android:color/background_dark"
                        android:background="@android:color/background_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView android:layout_width="12dp"
                           android:layout_gravity="center"
                           android:layout_height="12dp"
                           android:layout_marginRight="8dp"
                           android:layout_marginLeft="10dp"
                           android:src="@drawable/next"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Button
        android:background="@drawable/button_login"
        android:id="@+id/btncapnhat"
        android:shadowRadius="1"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowColor="@android:color/holo_red_dark"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:text="Cập Nhật"

        android:layout_below="@+id/c1"
       android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="50dp"/>
    <TextView android:layout_width="160dp"
              android:layout_height="50dp"
              android:background="@drawable/button_login"
    android:text="Đăng Xuất"
              android:id="@+id/txtdangxuat"
              android:elevation="5dp"
              android:gravity="center"
    android:layout_centerHorizontal="true"
              android:layout_marginBottom="15dp"
              android:textColor="@android:color/holo_purple"
              android:shadowColor="@android:color/holo_blue_dark"
              android:textSize="22sp"

    android:layout_alignParentBottom="true"/>
</RelativeLayout>